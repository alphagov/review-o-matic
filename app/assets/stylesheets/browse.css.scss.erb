body.browser {

  background: #f6f6f6;

  .left { float: left; }
  .right { float: right; }
  .clear { clear: both; }

  .my_profile {
    width: 500px;
    margin: 1em auto;
    background: #fff;
    border: 1px solid #ccc;
    padding: 1em;

    h1 { margin: 0 0 0.5em; }

    .mappings_reviewed { background: #eee; border: 1px solid #ccc; padding: 0.8em 0; float: left; width: 245px; margin-bottom: 1em; text-align: center; font-size: 1em;
      strong { font-weight: bold; font-size: 4.5em; text-shadow: #fff 0px 1px 1px; line-height: 1.1em; display: block; }
    }
    .continue { float: right; width: 245px; text-align: center;
      a {
        -webkit-box-shadow: #ddd 2px 2px 2px;
        display: inline-block;
        background: #446ec0;
        color: #fff;
        font-size: 1.5em;
        font-weight: bold;
        padding: 0.4em 0.95em;
        text-shadow: #2f4d8a 0px 1px 1px;
        text-decoration: none;
      }
      a:hover, a:active { background: #4c7cdc; }
    }
  }

  #overlay {
    height: 900px;
    position: absolute;
    z-index: 1000;
    background: #fff url('<%= asset_path 'loading.gif' %>') no-repeat center center;
    opacity: 0.95;
    width: 100%;
  }

  .mapping_info {
    background: #C3CAD2;
    height: 5em;
    font-size: 1.2em;
    border-bottom: 1px solid #aeb5be;
    padding: 0.6em 1em;

    > .left { width: 70%; }
    > .right { width: 25%; }

    h1 { font-weight: 200; margin: 0.5em 0 0.25em; text-align: left; font-size: 1.7em; width: 100%; height: 1.4em; overflow: hidden; }
    .result { font-weight: 500; color: #666; margin: 0; font-size: 1.2em; height: 1.4em; overflow: hidden; }

    a { color: #333; text-decoration: none; border-bottom: 1px solid #bbb; padding-bottom: 0px; }
    a:hover, a:active { border-bottom-color: #666; color: #111; }

    .buttons, .comment {
      background: #ddd; border: 1px solid #bbb;
      padding: 0.6em;
      font-size: 1.2em;
      display: inline-block;
      text-align: center;

      button { 
        -webkit-box-shadow: #bbb 2px 2px 2px; 
        border: none; color: #fff; 
        font-weight: bold; 
        padding: 0 0.8em;
        span {
          display: inline-block;
          &:first-child {
            font-size: 1.5em;
            padding: 0.3em 0;
          }
          &:last-child {
            font-size: 1em;
            vertical-align: top;
            margin: 0.75em 0 0;
          }
        }
        &:hover {
          cursor: pointer;
        }
      }
      button.loading { background: #2a83e7; }
      button.selected { background: #2a83e7; }

      button[name='positive'] {
        background: #6fa32e;
        text-shadow: #5b8515 1px 1px 1px;
        &:hover { background: #648e15; }
      }
      button[name='neutral'] {
        background: #fea120;
        text-shadow: #9d5a10 1px 1px 1px;
        &:hover { background: #f28b19; }
      }
      button[name='negative'] {
        background: #c9281f;
        text-shadow: #6a1510 1px 1px 1px;
        &:hover { background: #aa221a; }
      }
    }
    .buttons.disabled {
      button { opacity: 0.5; }
    }
  }

  .mapping_links_container {
    > div {
      width: 49%;
      display: inline-block;
      float: none;
      vertical-align: top;
      &.right {
        text-align: right;
      }
      > a {
        word-wrap: break-word;
        &.disabled  {
          opacity: 0.5;
        }
      }
    }
  }

  iframe { border: none; border-bottom: 1px solid #aeb5be; z-index: 0; height: 900px; width: 49.9%; }
  iframe.left {
    border-right: 1px solid #aeb5be;
  }
  // iframe.right { width: 49.5%;}

}
