<table border="0" cellpadding="0" cellspacing="0">
  <thead>
    <tr>
      <td>
        Section 
      </td>
      <td>
        Rating 
      </td>
      <td>
        Edit in Migratorator 
      </td>
      <td>
        View in Migratorator 
      </td>
    </tr>
  </thead>
  <tbody>

  <% @mappings.each do |mapping| %>
    <tr>
      <td>
         <%= mapping.section %>
      </td>
      <td>
         <%= mapping.score %> / 100 
      </td>
      <td>
        <%= link_to "Edit", "https://migratorator.production.alphagov.co.uk/mappings/#{mapping.mapping_id}/edit",  :target => '_blank'%>
      </td>
      <td>
         <%= link_to "View", browse_mapping_path(mapping.mapping_id) %> 
      </td>
    </tr>
  <% end %>

  </tbody>
</table>


